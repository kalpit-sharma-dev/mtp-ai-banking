# Server Configuration
SERVER_PORT=8081
SERVER_HOST=0.0.0.0

# MCP Server Configuration (Layer 1)
MCP_SERVER_URL=http://localhost:8080
MCP_SERVER_API_KEY=test-api-key
MCP_SERVER_TIMEOUT=30

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_ENABLED=true
LLM_BASE_URL=

# Context Enrichment Configuration
CONTEXT_HISTORY_DAYS=90
CONTEXT_ENABLE_BEHAVIOR=true
CONTEXT_ENABLE_RISK=true
CONTEXT_CACHE_TTL=300

# Logging Configuration
LOGGING_LEVEL=info
LOGGING_FORMAT=json

# Security Configuration
SECURITY_API_KEY_HEADER=X-API-Key
SECURITY_JWT_SECRET=your-secret-key-change-in-production
SECURITY_RATE_LIMIT_RPS=100
